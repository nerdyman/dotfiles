{
  "archinstall-language": "English",
  "audio_config": {
    "audio": "pipewire"
  },
  "bootloader": "Systemd-boot",
  "debug": false,
  "disk_config": {
    "config_type": "default_layout",
    "device_modifications": [
      {
        "device": "/dev/nvme0n1",
        "partitions": [
          {
            "btrfs": [],
            "flags": ["boot"],
            "fs_type": "fat32",
            "size": {
              "sector_size": null,
              "unit": "GiB",
              "value": 1
            },
            "mount_options": [],
            "mountpoint": "/boot",
            "obj_id": "boot-partition",
            "start": {
              "sector_size": null,
              "unit": "MiB",
              "value": 1
            },
            "status": "create",
            "type": "primary"
          },
          {
            "btrfs": [
              {
                "compress": false,
                "mountpoint": "/",
                "name": "@",
                "nodatacow": false
              },
              {
                "compress": false,
                "mountpoint": "/home", 
                "name": "@home",
                "nodatacow": false
              }
            ],
            "flags": [],
            "fs_type": "btrfs",
            "size": {
              "sector_size": null,
              "unit": "Percent",
              "value": 100
            },
            "mount_options": [],
            "mountpoint": "/",
            "obj_id": "root-partition-id",
            "start": {
              "sector_size": null,
              "unit": "GiB",
              "value": 1
            },
            "status": "create",
            "type": "primary"
          }
        ],
        "wipe": true
      }
    ]
  },
  "hostname": "itty",
  "kernels": ["linux", "linux-zen"],
  "locale_config": {
    "kb_layout": "uk",
    "sys_enc": "UTF-8",
